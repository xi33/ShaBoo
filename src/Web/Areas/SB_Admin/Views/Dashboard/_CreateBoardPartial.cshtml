@model ShaBoo.Web.Areas.SB_Admin.ViewModels.BoardViewModels.CreateBoradModel
<article class="module width_full">
	<header>
		<h3>Post New Article</h3>
	</header>
	<div class="module_content">
		<fieldset style="width:48%; float:left; margin-right: 3%;">
			<!-- to make two field float next to one another, adjust values accordingly -->
			@Html.LabelFor(model => model.Title)
			@Html.TextBoxFor(_ => _.Title, new { style = "width:92%" })
		</fieldset>
		<fieldset style="width:48%; float:left;">
			<!-- to make two field float next to one another, adjust values accordingly -->
			@Html.LabelFor(model => model.PostedOn)
			@* <input type="text" style="width:92%;"> *@
             @Html.EditorFor(model => model.PostedOn)
		</fieldset>
		<div class="clear"></div>
		<fieldset>
			@Html.LabelFor(model => model.Content)
            @Html.EditorFor(_ => _.Content)
		</fieldset>
		<div class="clear"></div>
	</div>
	<footer>
		<div class="submit_link">
			<input type="submit" value="Publish" class="alt_btn">
			<input type="submit" value="Reset"></div>
	</footer>
</article>

